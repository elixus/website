<!-- Portfolio Section -->
<section id="portfolio" class="py-24 bg-slate-50 dark:bg-slate-900">
	<div class="max-w-7xl mx-auto px-6">
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-slate-100 mb-4">
				Featured Work
			</h2>
			<p class="text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
				Recent projects showcasing our expertise and commitment to quality
			</p>
		</div>

		<div class="grid md:grid-cols-2 gap-8">
			<!-- Meshum -->
			<div class="group relative overflow-hidden rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 hover:border-blue-500 dark:hover:border-blue-500">
				<div class="p-8">
					<div class="flex items-center justify-between mb-4">
						<h3 class="text-2xl font-bold text-slate-900 dark:text-slate-100">Meshum</h3>
						<a href="https://meshum.elixus.be" target="_blank" rel="noopener noreferrer" aria-label="open in new tab" class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
							</svg>
						</a>
					</div>
					<p class="text-slate-600 dark:text-slate-300 mb-4">
						A knowledge management platform connecting teams across GitHub, Jira, Confluence, and Slack.
						Built with Astro, TailwindCSS, and modern design principles.
					</p>
					<div class="flex flex-wrap gap-2">
						<span class="px-3 py-1 text-sm bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full">Astro</span>
						<span class="px-3 py-1 text-sm bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full">TailwindCSS</span>
						<span class="px-3 py-1 text-sm bg-pink-100 dark:bg-pink-900/30 text-pink-700 dark:text-pink-300 rounded-full">TypeScript</span>
					</div>
				</div>
			</div>

			<!-- Portfolio Website -->
			<div class="group relative overflow-hidden rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 hover:border-purple-500 dark:hover:border-purple-500">
				<div class="p-8">
					<div class="flex items-center justify-between mb-4">
						<h3 class="text-2xl font-bold text-slate-900 dark:text-slate-100">Personal Portfolio</h3>
						<a href="https://www.dealloc.be" target="_blank" rel="noopener noreferrer" aria-label="open in new tab" class="text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
							</svg>
						</a>
					</div>
					<p class="text-slate-600 dark:text-slate-300 mb-4">
						Modern personal portfolio showcasing projects, blog posts, and technical expertise.
						Features clean design, dark mode, and optimized performance.
					</p>
					<div class="flex flex-wrap gap-2">
						<span class="px-3 py-1 text-sm bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full">Astro</span>
						<span class="px-3 py-1 text-sm bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full">TailwindCSS</span>
						<span class="px-3 py-1 text-sm bg-cyan-100 dark:bg-cyan-900/30 text-cyan-700 dark:text-cyan-300 rounded-full">MDX</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
